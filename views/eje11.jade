html
  head
    meta(charset = 'utf-8')
  body
    form

      time(for='Fecha', id='fecha')
      br

      time(for='Hora', id='hora')
      br
       
    :coffeescript
      setInterval (-> 
        d = new Date
        t = d.toLocaleTimeString()
        f = d.toLocaleDateString()
        document.getElementById('fecha').innerHTML = f
        document.getElementById('hora').innerHTML = t)
        , 1000
